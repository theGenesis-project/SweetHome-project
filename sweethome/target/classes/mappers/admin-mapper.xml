	<!-- 회원수 -->
	<select id="selectMemberCount" resultType="_int">
		SELECT 
			   COUNT(*)
		  FROM
		  	   MEMBER
	</select>
	
	<!-- 회원 정보 리스트 -->
	<select id="selectMemberList" resultMap="memberResultSet">
		SELECT 
			    USER_NO
			   ,USER_TYPE
			   ,USER_ID
			   ,USER_NAME
			   ,EMAIL
			   ,ENROLL_DATE
			   ,STATUS
		  FROM	  
		  	    MEMBER
		 ORDER
		    BY
		        USER_NO DESC	    
	</select>
	
	<!-- 주문 리스트 카운트 -->
	<select id="adminOrderListCount" resultType="_int">
		SELECT
			COUNT(*)
		FROM
			ORDER_INFO
	</select>
	
	<!-- 주문 내역 리스트 -->
	<select id="selectOrderList" resultMap="orderInfoResultSet">
		SELECT 
			ORDER_NO
			, USER_ID
			, ORDER_STATUS
			, INTERIOR_TITLE
			, ORDER_DATE
		FROM 
			ORDER_INFO
		JOIN 
			INTERIOR USING(INTERIOR_NO)
		JOIN 
			MEMBER USING(USER_NO)
		ORDER BY 
			ORDER_DATE DESC
	
	</select>
	  
